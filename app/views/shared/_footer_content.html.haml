.span9
  %hr
  %h2=:whats_fresh.l
  %table{:width => '100%'}
    - @recent_activity.each do |activity|
      =render :partial => "activities/activity", :locals => {:activity => activity }
  =icon_link_to 'icon-plus-sign', :see_all_activity.l, activities_path

.span3.pull-right
  %hr
  %h2=:tags.l
  - tag_cloud @popular_tags, %w(css1 css2 css3 css4 css5) do |tag, css_class|
    = link_to tag.name, tag_path(tag.to_param), :class => css_class
  %p
    =icon_link_to 'icon-plus-sign', :all_tags.l, tags_path
