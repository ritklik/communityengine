.control-group
  %label.control-label{:for => 'poll_question'} 
    =:question.l
  .controls=text_field_tag 'poll[question]', poll.question, :class => 'text'

.control-group
  %label.control-label
    =:choices.l
  .controls
    %ol#options
      -poll.choices.each do |choice|
        %li= text_field_tag "choices[]", choice.description, :class => 'text'
  